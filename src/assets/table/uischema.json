{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Control",
      "scope": "#/properties/title",
      "label": "Title",
      "options": {
        "placeholder": "Enter the title"
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/columns",
      "label": "Columns",
      "options": {
        "addable": true,
        "removable": true
      }
    },
    {
      "type": "Group",
      "label": "Column Details",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/columns/items/properties/name",
          "label": "Column Name"
        },
        {
          "type": "Control",
          "scope": "#/properties/columns/items/properties/type",
          "label": "Data Type",
          "options": {
            "enum": ["string", "integer", "boolean", "date", "float"]
          }
        }
      ]
    }
  ]
}
